@{
    ViewData["Title"] = "Premios";
    ViewData["Current"] = "Premios";
    ViewData["Breadcrumb"] = new Dictionary<string, string>
    {
        { "Inicio", Url.Action("Index", "Home") },
        { "Premios", Url.Action("Premios", "Home") }
    };
}
<div class="col-12">
    <h1 class="text-center">Premios</h1>
</div>
<div class="col-12">
    <div class="row">
        <div class="col-lg-4 col-12 my-2">
            <select class="form-select" aria-label="Default select example">
                <option selected disabled>Categoria</option>
                <option value="jamones">Jamones</option>
                <option value="Todos">Todos</option>
            </select>
        </div>
        <div class="col-lg-4 col-12 my-2">
            <input type="number" class="form-control" id="exampleFormControlInput1"
                   placeholder="Puntos maximos">
        </div>
        <div class="col-lg-4 col-12 my-2">
            <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="Nombre">
        </div>
    </div>
</div>
<div class="col-12">
    <div class="row">

        @for (int i = 0; i < 10; i++)
        {
            <div class="col-lg-3 col-sm-6 col-12 my-4">
                <div class="card text-center w-100" style="width: 18rem;">
                    <img src="https://jamonesyembutidoslucas.com/wp-content/uploads/2018/08/1_JAMON-BELLOTA-IB%C3%89RICO-100plato.jpg"
                         class="card-img-top" alt="jamon-iberico">
                    <div class="card-body">
                        <h5 class="card-title">Jamon iberico</h5>
                        <span class="badge badge-secondary p-2 m-1">Jamones</span>
                        <span class="badge badge-primary p-2 m-1">5000 Puntos</span>
                        <hr/>
                        <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#claimModal"
                                onclick="populateModal('Jamon iberico', '5000 Puntos', 'Jamones', 'Descripción del jamón ibérico.',
                                     'https://jamonesyembutidoslucas.com/wp-content/uploads/2018/08/1_JAMON-BELLOTA-IB%C3%89RICO-100plato.jpg')">
                            Reclamar
                        </button>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="claimModal" tabindex="-1" aria-labelledby="claimModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="claimModalLabel">Reclamar Premio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <img id="modal-image" src="" class="img-fluid" alt="Premio" style="max-width: 100px;">
                </div>
                <div class="mb-3">
                    <label for="modal-nombre" class="form-label">Nombre premio</label>
                    <input type="text" class="form-control" id="modal-nombre" readonly>
                </div>
                <div class="mb-3">
                    <label for="modal-descripcion" class="form-label">Descripción</label>
                    <textarea class="form-control" id="modal-descripcion" rows="3" readonly></textarea>
                </div>
                <div class="mb-3">
                    <label for="modal-rubro" class="form-label">Rubro</label>
                    <input type="text" class="form-control" id="modal-rubro" readonly>
                </div>
                <div class="mb-3">
                    <label for="modal-puntos" class="form-label">Puntos requeridos</label>
                    <input type="text" class="form-control" id="modal-puntos" readonly>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Reclamar premio</button>
            </div>
        </div>
    </div>
</div>

<script>
    function populateModal(name, points, category, description, image) {
        document.getElementById('modal-nombre').value = name;
        document.getElementById('modal-puntos').value = points;
        document.getElementById('modal-rubro').value = category;
        document.getElementById('modal-descripcion').value = description;
        document.getElementById('modal-image').src = image;
    }
</script>