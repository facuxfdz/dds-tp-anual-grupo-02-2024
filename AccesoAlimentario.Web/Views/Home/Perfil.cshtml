@{
    ViewData["Title"] = "Perfil";
    ViewData["Current"] = "Perfil";
    ViewData["Breadcrumb"] = new Dictionary<string, string>
    {
        { "Inicio", Url.Action("Index", "Home") },
        { "Perfil", Url.Action("Perfil", "Home") }
    };
}

<div class="col-12">
    <h1 class="text-center">Mi Perfil</h1>
</div>
<div class="col-12">
    <form>
        <div class="row">
            <div class="col-3 text-center my-auto">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img (31).webp" class="rounded-circle"
                     height="200" alt="Avatar" loading="lazy"/>
            </div>
            <div class="col-9">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" placeholder="Nombre">
                </div>
                <div class="mb-3">
                    <label for="lastname" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="lastname" placeholder="Apellido">
                </div>
                <div class="mb-3 row">
                    <div class="col-6">
                        <label for="tipoDocumento" class="form-label">Tipo de Documento</label>
                        <select class="form-select" id="tipoDocumento">
                            <option selected disabled>Seleccione un tipo de documento...</option>
                            <option value="Dni">Dni</option>
                            <option value="LE">LE</option>
                            <option value="LC">LC</option>
                            <option value="CUIT">CUIT</option>
                            <option value="CUIL">CUIL</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <label for="documento" class="form-label">Documento</label>
                        <input type="text" class="form-control" id="documento" placeholder="Documento">
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="mb-3 row">
                    <div class="col-8">
                        <label for="calle" class="form-label">Calle</label>
                        <input type="text" class="form-control" id="calle" placeholder="Calle">
                    </div>
                    <div class="col-4">
                        <label for="numero" class="form-label">Número</label>
                        <input type="text" class="form-control" id="numero" placeholder="Número">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-4">
                        <label for="localidad" class="form-label">Localidad</label>
                        <input type="text" class="form-control" id="localidad" placeholder="Localidad">
                    </div>
                    <div class="col-2">
                        <label for="piso" class="form-label">Piso</label>
                        <input type="text" class="form-control" id="piso" placeholder="Piso">
                    </div>
                    <div class="col-4">
                        <label for="departamento" class="form-label">Departamento</label>
                        <input type="text" class="form-control" id="departamento" placeholder="Departamento">
                    </div>
                    <div class="col-2">
                        <label for="codigoPostal" class="form-label">Código Postal</label>
                        <input type="text" class="form-control" id="codigoPostal" placeholder="CP">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="sexo" class="form-label">Sexo</label>
                    <select class="form-select" id="sexo">
                        <option selected disabled>Seleccione su sexo...</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                        <option value="Otro">Otro</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="formasDeContribuccionPreferidas" class="form-label">Formas de contribución preferidas</label>
                    <select class="form-select" id="formasDeContribuccionPreferidas" multiple>
                        <option value="DonacionMonetaria">Donación Monetaria</option>
                        <option value="DonacionVianda">Donación de Viandas</option>
                        <option value="OfertaPremio">Oferta de Premios</option>
                        <option value="AdministracionHeladera">Administración de Heladeras</option>
                        <option value="DistribucionViandas">Distribución de Viandas</option>
                    </select>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Actualizar</button>
                </div>
            </div>

        </div>
    </form>
</div>

<script>
    window.addEventListener('DOMContentLoaded', function () {
        $( '#formasDeContribuccionPreferidas' ).select2( {
            theme: 'bootstrap-5'
        } );
    })
</script>